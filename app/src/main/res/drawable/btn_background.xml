<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff6659" />
            <stroke
                android:width="3dp"
                android:color="#80FFFFFF" />
            <corners
                android:radius="5dp" />
            <!--<padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />-->
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#d32f2f"
                android:endColor="#d32f2f"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#80FFFFFF" />
            <corners
                android:radius="5dp" />
            <!--<padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
