<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/_245sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorAccent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:foreground="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toEndOf="@+id/close_btn"
            android:layout_toRightOf="@+id/close_btn"
            android:maxLines="1"
            android:text="Gentlepad Help"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </RelativeLayout>


    <com.example.gentlepad.views.AutofitTextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:singleLine="false"
        android:padding="@dimen/_10sdp"
        android:text="Gentlepad helps you to quickly take notes and save it offline to access anytime with no use of internet."
        android:textColor="@color/grey"
        android:textSize="@dimen/_12sdp" />

    <com.example.gentlepad.views.AutofitTextView
        android:id="@+id/tv_help_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:singleLine="false"
        android:paddingVertical="@dimen/_2sdp"
        android:text=""
        android:textColor="@color/grey"
        android:textSize="@dimen/_12sdp"/>

    <com.example.gentlepad.views.AutofitTextView
        android:id="@+id/tv_help_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:singleLine="false"
        android:text="To view notes click on the notes in the list."
        android:textColor="@color/grey"
        android:textSize="@dimen/_12sdp"/>

    <com.example.gentlepad.views.AutofitTextView
