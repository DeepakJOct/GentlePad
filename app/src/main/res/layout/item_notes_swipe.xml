<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/_4sdp"
    android:backgroundTint="@color/background_light_red"
    app:cardElevation="@dimen/_2sdp">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/item_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mode="same_level"
        app:dragEdge="right">

        <LinearLayout
            android:id="@+id/ll_swipe_delete"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorSecondaryDark"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_delete_swipe"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_1sdp"
                app:srcCompat="@drawable/ic_delete" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_item_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_notes_title_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:padding="@dimen/_2sdp"
                    android:text="@string/notes_title"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_notes_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_weight="0.67"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/_2sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Gentle pad note making app is the best app"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/tv_notes_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="0.33"
                    android:gravity="center_vertical|end"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:text="@string/dummy_date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />


            </LinearLayout>


        </LinearLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>




</android.support.v7.widget.CardView>