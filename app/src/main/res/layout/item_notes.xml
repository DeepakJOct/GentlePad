<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:backgroundTint="@color/background_light_red"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notes_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:text="Notes Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_notes_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:textColor="@color/grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Gentle pad note making app is the best app"/>

            <TextView
                android:id="@+id/tv_notes_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_weight="0.3"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="24 June 2019"/>

        </LinearLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>